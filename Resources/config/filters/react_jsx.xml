<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="assetic.filter.react_jsx.class">Assetic\Filter\ReactJsxFilter</parameter>
        <parameter key="assetic.filter.react_jsx.bin">/usr/bin/jsx</parameter>
        <parameter key="assetic.filter.react_jsx.node">%assetic.node.bin%</parameter>
    </parameters>

    <services>
        <service id="assetic.filter.react_jsx" class="%assetic.filter.react_jsx.class%">
            <tag name="assetic.filter" alias="react_jsx" />
            <argument>%assetic.filter.react_jsx.bin%</argument>
            <argument>%assetic.filter.react_jsx.node%</argument>
        </service>
    </services>
</container>
